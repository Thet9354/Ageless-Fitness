<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgView_contact"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_phone"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/imgView_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="10dp"/>

            </RelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEEF2"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/ll_wheelChair"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_white10_20"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgView_wheelChair"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@drawable/wheelchair_friendly_workout"/>

                <TextView
                    android:id="@+id/txtView_wheelChair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wheel-Chair Friendly Workout"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-30 mins"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_startWheelChair"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/start"
                    android:layout_marginTop="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_legStretches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_back_white10_20"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imgView_legStretches"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:src="@drawable/legstretches"/>

                <TextView
                    android:id="@+id/txtView_legStretches"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leg Stretches"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/clock"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5-10 mins"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/btn_startLegStretches"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/start"
                    android:layout_marginTop="30dp"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>